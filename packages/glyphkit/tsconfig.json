{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "outDir": "dist"
  },
  "include": ["src/**/*", "scripts/**/*", "demo/**/*"],
  "exclude": ["node_modules", "dist"]
} 
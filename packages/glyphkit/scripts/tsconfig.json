{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
      "react": ["node_modules/react"],
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./**/*.ts", 
    "./**/*.tsx",
    "../icons/flat/**/*.tsx"
  ],
  "exclude": ["node_modules"]
} 